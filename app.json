{
  "name": "Todo Application",
  "description": "A full-stack todo application with Next.js frontend and FastAPI backend",
  "repository": "https://github.com/Faisal9029/todo-app",
  "logo": "https://cdn.jsdelivr.net/gh/froala/design-assets@master/readme/logo.svg",
  "keywords": ["nextjs", "fastapi", "python", "typescript", "todo", "postgresql"],
  "env": {
    "DATABASE_URL": {
      "description": "PostgreSQL database connection string",
      "required": true
    },
    "JWT_SECRET_KEY": {
      "description": "Secret key for JWT token signing",
      "required": true,
      "generator": "secret"
    },
    "JWT_ALGORITHM": {
      "description": "Algorithm for JWT token signing",
      "value": "HS256",
      "required": false
    },
    "ACCESS_TOKEN_EXPIRE_MINUTES": {
      "description": "Access token expiration time in minutes",
      "value": "30",
      "required": false
    },
    "NEXT_PUBLIC_API_URL": {
      "description": "Backend API URL for frontend",
      "value": "http://localhost:8000",
      "required": false
    }
  },
  "scripts": {
    "postdeploy": "cd phase 2/backend && python -m alembic upgrade head"
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:hobby-dev"
    }
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-python"
    }
  ]
}